                android:id="@+id/i11"
                layout="@layout/teknisyengorevitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/includemargin" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>