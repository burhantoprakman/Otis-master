                layout="@layout/teknisyengorevitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/includemargin" />
            <include
                android:id="@+id/i5"
                layout="@layout/teknisyengorevitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/includemargin" />
            <include
                android:id="@+id/i6"
                layout="@layout/teknisyengorevitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/includemargin" />
            <include
                android:id="@+id/i7"
                layout="@layout/teknisyengorevitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/includemargin" />
            <include
                android:id="@+id/i8"
                layout="@layout/teknisyengorevitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/includemargin" />
            <include
                android:id="@+id/i9"
                layout="@layout/teknisyengorevitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/includemargin" />
            <include
                android:id="@+id/i10"
                layout="@layout/teknisyengorevitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/includemargin" />
