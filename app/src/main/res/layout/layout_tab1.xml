<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBEBF7">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Destek talep formu"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:background="@drawable/logo_white"/>

    </LinearLayout>

    <EditText
        android:id="@+id/editText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll"
        android:ems="10"
        android:hint="Bina Adı"
        android:inputType="textPersonName"
        android:background="@drawable/shapes"
        android:layout_margin="3dp"/>

    <EditText
        android:id="@+id/editText12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText10"
        android:ems="10"
        android:hint="Bakım / Tesisat No"
        android:inputType="textPersonName"
        android:background="@drawable/shapes"
        android:layout_margin="3dp"/>

    <EditText
        android:id="@+id/editText13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText12"
        android:ems="10"
        android:hint="Tarih"
        android:inputType="textPersonName"
        android:background="@drawable/shapes"
        android:layout_margin="3dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/editText14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText13"
        android:layout_alignBottom="@+id/editText13"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Saat"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/editText13"
        android:layout_toEndOf="@+id/editText13"
        android:background="@drawable/shapes"
        android:layout_margin="3dp"/>

    <EditText
        android:id="@+id/editText15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText13"
        android:ems="10"
        android:hint="Çağrı Merkezi Bildirim Saati"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:background="@drawable/shapes"
        android:layout_margin="3dp"/>

    <EditText
        android:id="@+id/editText16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText15"
        android:ems="10"
        android:hint="Arıza Kodu"
        android:inputType="textPersonName"
        android:background="@drawable/shapes"
        android:layout_margin="3dp"/>

    <EditText
        android:id="@+id/editText17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText16"
        android:ems="10"
        android:hint="Arıza Açıklaması"
        android:inputType="textPersonName"
        android:background="@drawable/shape_arizaaciklama"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText17"
        android:text="Tesisatın Durumu"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/gorevbitir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/editText17"
        android:layout_alignStart="@+id/editText17"
        android:text="Görevi Bitir"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:background="@drawable/shapes"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kapalı"
            />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Çalışıyor" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Malzeme Bekliyor" />
    </RadioGroup>
</RelativeLayout>
